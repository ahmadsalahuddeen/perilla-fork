// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Employee {
  id          String    @id @default(uuid())
  name        String
  email       String    @unique
  phone       String    @unique
  lastPayout  DateTime  @default(now())
  leavesTaken Int       @default(0)
  role        String
  employeeId  String
  companyName String
  salary      String    @default("0")
  image       String
  isBlocked   Boolean   @default(false)
  Asset       Asset[]
  Expense     Expense[]

  @@unique([email, phone])
}

model Asset {
  id          String   @id @default(uuid())
  companyName String
  assetName   String
  createdAt   DateTime @default(now())
  price       Int
  createdBy   Employee @relation(fields: [employeeId], references: [id])
  employeeId  String
}

model Expense {
  id          String   @id @default(uuid())
  companyName String
  expenseName String
  price       Int
  createdAt   DateTime @default(now())
  createdBy   Employee @relation(fields: [employeeId], references: [id])
  employeeId  String
}
